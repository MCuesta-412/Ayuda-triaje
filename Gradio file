import gradio as gr

def clasificar_triaje(sintomas):
    sintomas = sintomas.lower()
    
    urgencias = ["dolor en el pecho", "p√©rdida de conciencia", "dificultad para respirar", "hemorragia intensa", "par√°lisis", "convulsiones"]
    centro_salud = ["fiebre", "tos", "dolor de garganta", "mareo", "dolor de cabeza", "fatiga"]
    
    for urg in urgencias:
        if urg in sintomas:
            return "‚ö†Ô∏è Urgente: Debes acudir de inmediato a urgencias del hospital m√°s cercano."
    
    for centro in centro_salud:
        if centro in sintomas:
            return "üîπ Se recomienda acudir al centro de salud para una evaluaci√≥n m√©dica."
    
    return "‚ÑπÔ∏è Si los s√≠ntomas persisten o empeoran, consulta con un profesional m√©dico."

iface = gr.Interface(
    fn=clasificar_triaje,
    inputs=gr.Textbox(placeholder="Describe tus s√≠ntomas..."),
    outputs=gr.Textbox(),
    title="Chatbot de Triaje M√©dico",
    description="Ingresa tus s√≠ntomas y el chatbot te indicar√° si debes acudir a un centro de salud o a urgencias."
)

if __name__ == "__main__":
    iface.launch()
